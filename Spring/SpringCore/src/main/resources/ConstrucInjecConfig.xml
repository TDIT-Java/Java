<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
  ">

    <bean name="cer" class="org.SpringCore.ConstructorInjection.Certi">
        <constructor-arg value="Java"/>
    </bean>


    <bean name="person" class="org.SpringCore.ConstructorInjection.Person">
        <constructor-arg value="Pradeep"/>
        <constructor-arg value="1" type="int"/> <!-- here type is used for ambiguity -->
        <constructor-arg ref="cer"/>
    </bean>

</beans>
